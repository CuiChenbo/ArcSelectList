<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <Button
        android:id="@+id/bt_arc_select_r"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="弧形列表+自动选中+跟随旋转"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_arc_select_"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="弧形列表+自动选中"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_arc"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="矩阵实现弧形列表"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_arc2"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="边距实现弧形列表"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_auto_select"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="自动选中"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_carc"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:text="圆弧形列表"
        android:layout_height="wrap_content" />

</LinearLayout>